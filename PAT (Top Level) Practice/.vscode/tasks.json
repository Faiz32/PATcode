            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: C:\\MinGW\\bin\\g++.exe"
        }
    ],
    "version": "2.0.0"
